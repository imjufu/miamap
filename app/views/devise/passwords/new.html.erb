<div class="text-center">
  <h2><%= t('.forgot_your_password') %></h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-lost-password" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('activerecord.attributes.user.email'), class: 'form-control' %>
    <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-lg btn-primary btn-block' %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
