<div class="text-center">
  <h2><%= t('.resend_unlock_instructions') %></h2>
  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { class: "form-unlock", method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('activerecord.attributes.user.email'), class: 'form-control' %>
    <%= f.submit t('.resend_unlock_instructions'), class: 'btn btn-lg btn-primary btn-block' %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
