<div class="text-center">
  <h2><%= t('.sign_in') %></h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('activerecord.attributes.user.email'), class: 'form-control' %>
    <%= f.label :password, class: 'sr-only' %>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: t('activerecord.attributes.user.password'), class: 'form-control' %>
    <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
      <label>
        <%= f.check_box :remember_me %>
        <%= t('activerecord.attributes.user.remember_me') %>
      </label>
    </div>
    <% end %>
    <%= f.submit t('.sign_in'), class: 'btn btn-lg btn-primary btn-block' %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
