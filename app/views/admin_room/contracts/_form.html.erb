<%= form_with(model: [:admin_room, producer, contract], local: true) do |form| %>
  <%= render 'shared/errors', errors: contract.errors %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group" data-controller="editor">
    <%= form.label :content %>
    <%= form.text_area :content, class: 'form-control textarea' %>
    <div class="editor"></div>
  </div>
  <%= form.submit t('actions.save'), class: 'btn btn-primary' %>
<% end %>
