<div class="row">
  <div class="col-3">
    <%= render 'menu', registration_request: @registration_request %>
  </div>
  <div class="col-9">
    <h1 class="h3"><%= t('.title_html', email: @registration_request.email) %></h1>
    <%= render 'shared/errors', errors: @registration_request.errors %>
    <%= form_for(@registration_request, url: members_sign_up_step_2_path, html: { class: 'form-row' }) do |f| %>
      <div class="form-group col-md-6">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
      <div class="form-group col-md-6">
        <h4><%= t('.date_of_birth') %></h4>
        <%= f.label :date_of_birth %>
        <%= f.date_field :date_of_birth, class: 'form-control' %>
      </div>
      <div class="col-md-12">
        <%= f.submit t('.next'), class: 'btn btn-primary mb-3' %>
      </div>
    <% end %>
  </div>
</div>
