<% if errors.any? %>
  <div class="alert alert-warning" role="alert">
    <p class="alert-heading"><i class='far fa-lg fa-grimace'></i><%= t('errors.messages.saving_failed', count: errors.count) %></p>
    <hr />
    <ul>
    <% errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
