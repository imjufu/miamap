<div class="row">
  <div class="col-3">
    <%= render 'menu', registration_request: @registration_request %>
  </div>
  <div class="col-9">
    <h1 class="h3"><%= t('.title_html', first_name: @registration_request.first_name) %></h1>
    <%= render 'shared/errors', errors: @registration_request.errors %>
    <%= form_for(@registration_request, url: members_sign_up_step_3_path, html: { class: 'form-row' }) do |f| %>
      <div class="form-group col-md-12">
        <%= f.label :address %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :postal_code %>
        <%= f.text_field :postal_code, class: 'form-control' %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :city %>
        <%= f.text_field :city, class: 'form-control' %>
      </div>
      <%= f.submit t('.next'), class: 'btn btn-primary mb-3' %>
    <% end %>
  </div>
</div>
